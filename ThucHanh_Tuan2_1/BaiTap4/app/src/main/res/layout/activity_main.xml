<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Thông tin cá nhân"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFF00"
        android:background="#006666"/>

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Họ và tên:"/>
        <EditText

            android:layout_marginRight="10dp"
            android:id="@+id/edthvt"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="CMND:"/>
        <EditText

            android:layout_marginRight="10dp"
            android:id="@+id/edtcmnd"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Bằng cấp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFF00"
        android:background="#0099FF"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:layout_marginLeft="5dp"
            android:id="@+id/rdtc"
            android:layout_weight="1"
            android:text="Trung cấp"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rdcd"
            android:layout_weight="1"
            android:text="Cao đẳng"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rddh"
            android:layout_weight="1"
            android:text="Đại học"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Sở thích"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFF00"
        android:background="#0099FF"/>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <CheckBox
            android:layout_marginLeft="5dp"
            android:id="@+id/cbdb"
            android:layout_weight="1"
            android:text="Đọc báo"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <CheckBox
            android:id="@+id/cbds"
            android:layout_weight="1"
            android:text="Đọc sách"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <CheckBox
            android:id="@+id/cbcd"
            android:layout_weight="1"
            android:text="Đọc coding"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Thông tin bổ sung"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFF00"
        android:background="#0099FF"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/edtttbs"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:layout_marginLeft="89dp"
        android:background="#BBBBBB"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Gửi thông tin"
        android:layout_width="200dp"
        android:layout_height="50dp" />
</LinearLayout>